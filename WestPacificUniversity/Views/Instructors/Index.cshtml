@model WestPacificUniversity.Models.ListOfInstructorsViewModel

@{
    ViewData["Title"] = "Instructors";
}

<h1>Instructors</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
              @* DisplayNameFor gets the property's DisplayAttribute *@
                @Html.DisplayNameFor(model => model.Instructors[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instructors[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instructors[0].HireDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instructors[0].OfficeAssignment.Location)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Instructors)
        {
            string selectedRow = "";
            if (item.Id == (int?)ViewData["InstructorId"])
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HireDate)
                </td>
                <td>
                    @* DisplayFor respects custom display format specified using DisplayFormatAttribute.
                       But it throws if the lambda returns null.
                    *@
                    @*@Html.DisplayFor(modelItem => item.OfficeAssignment.Location)*@
                    @item.OfficeAssignment?.Location
                </td>
                <td>
                    <a asp-action="Index" asp-route-id="@item.Id">Select</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.Courses != null)
{
    <h3>Courses Taught by Selected Instructor</h3>
    <table class="table table-hover">
        <thead>
            <tr>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.Courses[0].CourseId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Courses[0].Title)
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.Courses[0].Department.Name)*@
                    Department
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Courses)
            {
                string selectedRow = "";
                if (item.CourseId == (int?)ViewData["CourseId"])
                {
                    selectedRow = "table-success";
                }
                <tr class="@selectedRow">
                    <td><a asp-action="Index" asp-route-courseId="@item.CourseId">Select</a></td>
                    <td>@item.CourseId</td>
                    <td>@item.Title</td>
                    <td>@item.Department.Name</td>
                </tr>
            }
        </tbody>
    </table>
}

@if (Model.Enrollments != null)
{
    <h3>Students Enrolled in Selected Course</h3>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Enrollments[0].Student.FullName)</th>
                <th>@Html.DisplayNameFor(model => model.Enrollments[0].Grade)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Enrollments)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Student.FullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Grade)</td>
                </tr>
            }
        </tbody>
    </table>
}
